<odoo>
    <data>
        <!-- Vista de Multas -->
        <record model="ir.ui.view" id="gestion_flota.multas_list">
            <field name="name">gestion_flota.multa.view.tree</field>
            <field name="model">gestion_flota.multa</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="referencia"/>
                    <field name="tipo"/>
                    <field name="fecha"/>
                    <field name="importe"/>
                    <field name="estado"/>
                </tree>
            </field>
        </record>

        <!-- Acciones del MenÃº -->
        <record model="ir.actions.act_window" id="gestion_flota.multa_action_window">
          <field name="name">Multas</field>
          <field name="res_model">gestion_flota.multa</field>
          <field name="view_mode">tree,form</field>
        </record>
        <menuitem name="Multas" id="gestion_flota.multa_menu" parent="gestion_flota.menu_root" action="gestion_flota.multa_action_window"/>
    </data>
</odoo>